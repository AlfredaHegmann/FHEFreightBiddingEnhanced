#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Commit message format validation
# Format: type(scope): subject
# Example: feat(contract): add encrypted bidding

commit_msg_file=$1
commit_msg=$(cat "$commit_msg_file")

# Check commit message format
if ! echo "$commit_msg" | grep -qE "^(feat|fix|docs|style|refactor|test|chore|perf|ci|build|revert)(\(.+\))?: .{3,}"; then
  echo "❌ Invalid commit message format"
  echo ""
  echo "Format: type(scope): subject"
  echo ""
  echo "Types:"
  echo "  feat:     New feature"
  echo "  fix:      Bug fix"
  echo "  docs:     Documentation"
  echo "  style:    Formatting"
  echo "  refactor: Code restructuring"
  echo "  test:     Add tests"
  echo "  chore:    Maintenance"
  echo "  perf:     Performance"
  echo "  ci:       CI/CD changes"
  echo "  build:    Build system"
  echo "  revert:   Revert commit"
  echo ""
  echo "Example: feat(contract): add encrypted bidding"
  exit 1
fi

echo "✅ Commit message format valid"
